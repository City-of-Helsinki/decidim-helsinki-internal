<% add_decidim_page_title(t(".posts")) %>

<section class="extended hero lower subpage secondary">
  <div class="hero__container">
    <div class="row column">
      <h1 class="h2"><%= t(".posts") %></h1>
      <p><%= t(".description") %></p>
    </div>
  </div>
  <div class="koro-wrapper">
    <%= koro("pulse") %>
  </div>
</section>

<div class="row columns">
  <%= render partial: "filters_small_view" %>
  <div class="show-for-mediumlarge">
    <%= render partial: "filters" %>
  </div>
</div>

<div class="row columns">
  <%= render partial: "decidim/blogs/posts/listing", locals: { posts: posts } %>
</div>

<%= javascript_include_tag("decidim/filters") %>
