<section class="extended hero lower subpage secondary">
  <div class="hero__container">
    <div class="row">
      <div class="columns large-8 large-push-2 text-center">
        <h1><%= translated_attribute page.title %></h1>
      </div>
    </div>
  </div>
  <div class="koro-wrapper">
    <%= koro("basic") %>
  </div>
</section>

<div class="wrapper">
  <div class="section">
    <div class="row">
      <div class="column small-12 mediumlarge-4">
        <%= render "side_panel", current: page %>
      </div>

      <div class="column small-12 mediumlarge-8 large-6 large-push-1 end">
        <%= decidim_sanitize_admin translated_attribute page.content %>

        <div class="row tos-wrapper">
          <div class="columns small-12">
            <%= cell "decidim/tos_page", :form %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
