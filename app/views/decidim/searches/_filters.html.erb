<%= filter_form_for filter do |form| %>
  <div class="form-section">
    <div class="input-group">
      <%= label_tag "input-search" do %>
        <span class="show-for-sr">Hakusana</span>
        <%= text_field_tag(
          :term,
          nil,
          class: "input-group-field",
          id: "input-search",
          value: params[:term] || params.dig(:filter, :term),
          placeholder: t("decidim.search.term_input_placeholder"),
          title: t("decidim.search.term_input_placeholder")
        ) %>
      <% end %>
      <div class="input-group-button">
        <button type="submit" class="button">
          <%= icon "magnifying-glass", aria_label: t("decidim.search.term_input_placeholder"), role: "img" %>
        </button>
      </div>
    </div>

    <div data-search-type="Decidim::User">
      <fieldset>
        <legend class="show-for-sr">Sparrauskaverit</legend>
        <div class="column-grid">
          <label class="column">
            <%= radio_button_tag "filter[subtype]", "all", filter.subtype == "all" %>
            Kaikki
          </label>
          <label class="column">
            <%= radio_button_tag "filter[subtype]", "sparring", filter.subtype == "sparring" %>
            Sparrauskaverit
          </label>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>
