<div class="row medium-up-2 large-up-3 card-grid">
  <%= render partial: "decidim/accountability_simple/shared/result", collection: results %>
</div>

<div class="row">
  <div class="columns mediumlarge-8 large-9">
    <% if results.empty? %>
      <div class="callout secondary">
        <p><%= t(".empty") %></p>
      </div>
    <% end %>
  </div>
</div>
<%= decidim_paginate results, order_start_time: params[:order_start_time], scope_id: params[:scope_id] %>
