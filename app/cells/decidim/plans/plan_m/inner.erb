<%= link_to resource_path, class: "card #{card_classes}", role: "region", aria: { label: title } do %>
  <%= render :top if render_top? %>
  <%= render :image %>
  <%= render :category %>
  <div class="card__content">
    <%= render :header %>

    <div class="card__text">
      <div class="card__text--paragraph">
        <%= description %>
      </div>

      <%= render :state_indicator %>
      <%= render :authors %>
      <%= render :date if plan.published? %>
      <%= render :tags if has_tags? %>
    </div>
  </div>

  <%= render :data %>
  <%= render :status %>
  <%= render :footer %>
<% end %>
